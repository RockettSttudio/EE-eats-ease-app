<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/pink_base"
    android:elevation="16dp"
    app:cardBackgroundColor="@color/mint_base"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/Foto_Ingredients"
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/svg_layer4" />

        <TextView
            android:id="@+id/name_ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="150dp"
            android:textAlignment="center"
            android:text="TOMATO"
            android:textSize="@dimen/medium_gap"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="@color/black"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Checkbox_Ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                style="@style/AppCheckBox" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>