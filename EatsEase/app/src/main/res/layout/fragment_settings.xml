<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/back_flecha_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            android:rotationY="-180"
            android:src="@drawable/baseline_arrow_forward_24"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/verdeapp"
            android:textSize="@dimen/big_gap"/>

        <ImageView
            android:id="@+id/Eats_Ease_settings"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/headline"
            android:scaleType="fitStart"
            android:adjustViewBounds="true" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout_security_settings"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true">

        <TextView
            android:id="@+id/security_settings"
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:text="Logout"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow_security"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/flecha_correcta" />



    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>